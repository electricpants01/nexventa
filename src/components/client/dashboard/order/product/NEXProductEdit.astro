---
import { Image } from 'astro:assets'
import imgProduct from '@images/food/11.jpg'
const productedit = {
  id: '1',
  name: 'Pollo al horno',
  discount: '30%',
  detail: 'Cuarto de pollo .',
  price: '20.00',
  currency: 'Bs',
  longDetail:
    'Pollo al horno con arroz, papa .............................................................',
  shortDetail: 'Pollo al horno',
  amount: '1',
  gloss: 'Con arroz'
}
---

<div>
  <div
    id="edit-modal"
    aria-hidden="true"
    class="fixed left-0 right-0 top-0 z-50 hidden h-[calc(100%-1rem)] max-h-full w-full items-center justify-center overflow-y-auto overflow-x-hidden md:inset-0"
  >
    <div class="relative max-h-full w-full max-w-3xl p-4">
      <div class="relative rounded-lg bg-white shadow dark:bg-gray-700">
        <div
          class="flex items-center justify-between rounded-t border-b p-4 md:p-5 dark:border-gray-600"
          style={{ background: 'linear-gradient(135deg, #ff5c28, #da3805)' }}
        >
          <h3 class="text-center text-lg font-semibold text-white">Editar Producto</h3>
          <button
            type="button"
            class="ms-auto inline-flex h-8 w-8 items-center justify-center rounded-lg bg-orange-500 text-sm text-white hover:bg-orange-600 focus:outline-none focus:ring-4 focus:ring-orange-300"
            data-modal-toggle="edit-modal"
          >
            <i class="bx bx-x"></i>
            <span class="sr-only">Close</span>
          </button>
        </div>
        <form class="p-4 md:p-5">
          <div class="mb-4 grid gap-4">
            <div class="flex items-center">
              <div class="w-1/2">
                <Image
                  src={imgProduct}
                  alt={productedit.name}
                  class="w-full rounded-md border border-gray-200"
                />
              </div>
              <div class="w-1/2 pl-4">
                <label class="block text-sm font-medium text-gray-900 dark:text-white">
                  <i class="bx bxs-food-menu mr-2"></i>
                  <b>Nombre:</b>
                  {productedit.name}
                </label>
                <label class="block text-sm font-medium text-gray-900 dark:text-white">
                  <i class="bx bx-dollar mr-2"></i>
                  <b>Precio:</b>
                  {productedit.price}
                  {productedit.currency}
                </label>
                <label class="block text-sm font-medium text-gray-900 dark:text-white">
                  <i class="bx bx-discount mr-2"></i>
                  <b>Descuento:</b>
                  {productedit.discount}
                </label>
                <label class="block text-sm font-medium text-gray-900 dark:text-white">
                  <i class="bx bx-info-circle mr-2"></i>
                  <b>Descripción Corta:</b>
                  {productedit.shortDetail}
                </label>
                <div class="mb-4">
                  <label class="block text-sm font-medium text-gray-900 dark:text-white">
                    <i class="bx bx-detail mr-2"></i>
                    <b>Descripción Larga:</b>
                    {productedit.longDetail}
                  </label>
                  <br />
                  <label class="block text-sm font-medium text-gray-900 dark:text-white">
                    <i class="bx bx-info-circle mr-2"></i>
                    <b>Cantidad:</b>
                  </label>
                  <div class="relative mb-2 flex items-center">
                    <button
                      type="button"
                      id="decrement-button"
                      data-input-counter-decrement="bedrooms-input"
                      class="h-11 rounded-s-lg border border-gray-300 bg-gray-100 p-3 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-100 dark:border-gray-600 dark:bg-gray-700 dark:hover:bg-gray-600 dark:focus:ring-gray-700"
                    >
                      <i class="bx bx-x"></i>
                    </button>
                    <input
                      type="text"
                      id="bedrooms-input"
                      data-input-counter
                      data-input-counter-min="1"
                      data-input-counter-max="5"
                      class="block h-11 w-full border-x-0 border-gray-300 bg-gray-50 pb-6 text-center text-sm font-medium text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500"
                      placeholder=""
                      value={productedit.amount}
                      required
                    />
                    <div
                      class="absolute bottom-1 start-1/2 flex -translate-x-1/2 items-center space-x-1 text-xs text-gray-400 rtl:translate-x-1/2 rtl:space-x-reverse"
                    >
                      <span>Unidad</span>
                    </div>
                    <button
                      type="button"
                      id="increment-button"
                      data-input-counter-increment="bedrooms-input"
                      class="h-11 rounded-e-lg border border-gray-300 bg-gray-100 p-3 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-100 dark:border-gray-600 dark:bg-gray-700 dark:hover:bg-gray-600 dark:focus:ring-gray-700"
                    >
                      <i class="bx bx-x"></i>
                    </button>
                  </div>
                  <label class="block text-sm font-medium text-gray-900 dark:text-white">
                    <i class="bx bx-detail mr-2"></i>
                    <b>Glosa:</b>
                  </label>
                  <input
                    id="longDetail"
                    name="longDetail"
                    type="text"
                    value={productedit.gloss}
                    class="block w-full rounded-md border-gray-300 bg-gray-50 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                  />
                </div>
              </div>
            </div>
            <button
              class="block w-full rounded-lg bg-orange-500 px-5 py-2.5 text-center text-sm font-medium text-white hover:bg-orange-600 focus:outline-none focus:ring-4 focus:ring-orange-300"
              type="submit"
            >
              Guardar
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
