<astro-doc>
  <div
    id="user-modal"
    aria-hidden="true"
    class="fixed left-0 right-0 top-0 z-50 hidden h-[calc(100%-1rem)] max-h-full w-full items-center justify-center overflow-y-auto overflow-x-hidden md:inset-0"
  >
    <div class="relative max-h-full w-full max-w-xl p-4">
      {/* Modal content */}
      <div class="relative rounded-lg bg-white shadow dark:bg-gray-700">
        {/* Modal header */}
        <div
          class="flex items-center justify-between rounded-t border-b p-4 md:p-5 dark:border-gray-600"
          style={{ background: 'linear-gradient(135deg, #ff5c28, #da3805)' }}
        >
          <h3 class="text-lg font-semibold" style={{ textAlign: 'center', color: 'white' }}>
            <span>
              <i class="bx bx-user-plus mr-2"></i>
            </span>
            Registrar cliente
          </h3>
          <button
            type="button"
            class="ms-auto inline-flex h-8 w-8 items-center justify-center rounded-lg bg-orange-500 text-sm text-white
                  hover:bg-orange-600 focus:outline-none
                  focus:ring-4 focus:ring-orange-300"
            data-modal-toggle="user-modal"
          >
            <i class="bx bx-x"></i>
            <span class="sr-only">Close</span>
          </button>
        </div>
        {/* Modal body */}
        <form class="p-4 md:p-5">
          <div class="mb-4 grid grid-cols-2 gap-4">
            <div class="col-span-2">
              <label class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"
                ><i class="bx bx-id-card mr-2"></i>NIT o Carnet de identidad:</label
              >
              <input
                type="text"
                name="nit"
                id="nit"
                class="focus:ring-primary-600 focus:border-primary-600 dark:focus:ring-primary-500 dark:focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 dark:border-gray-500 dark:bg-gray-600 dark:text-white dark:placeholder-gray-400"
                placeholder="Nit or Carnet de identidad"
                required=""
              />
            </div>
            <div class="col-span-2 sm:col-span-1">
              <label class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"
                ><i class="bx bx-user mr-2"></i>Nombre/Razón Social:</label
              >
              <input
                type="text"
                name="nombre"
                id="apellidoPaterno"
                class="focus:ring-primary-600 focus:border-primary-600 dark:focus:ring-primary-500 dark:focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 dark:border-gray-500 dark:bg-gray-600 dark:text-white dark:placeholder-gray-400"
                placeholder="Nombre/Razón Social"
                required=""
              />
            </div>
            <div class="col-span-2 sm:col-span-1">
              <label class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"
                ><i class="bx bx-user mr-2"></i>Apellido Paterno:</label
              >
              <input
                type="text"
                name="apellidoPaterno"
                id="apellidoPaterno"
                class="focus:ring-primary-600 focus:border-primary-600 dark:focus:ring-primary-500 dark:focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 dark:border-gray-500 dark:bg-gray-600 dark:text-white dark:placeholder-gray-400"
                placeholder="Apellido Paterno"
                required=""
              />
            </div>
            <div class="col-span-2 sm:col-span-1">
              <label class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"
                ><i class="bx bx-user mr-2"></i>Apellido Materno:</label
              >
              <input
                type="text"
                name="nombre"
                id="nombre"
                class="focus:ring-primary-600 focus:border-primary-600 dark:focus:ring-primary-500 dark:focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 dark:border-gray-500 dark:bg-gray-600 dark:text-white dark:placeholder-gray-400"
                placeholder="Apellido Materno"
                required=""
              />
            </div>
            <div class="col-span-2 sm:col-span-1">
              <label class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"
                ><i class="bx bx-building mr-2"></i>Empresa:</label
              >
              <input
                type="text"
                name="empresa"
                id="empresa"
                class="focus:ring-primary-600 focus:border-primary-600 dark:focus:ring-primary-500 dark:focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 dark:border-gray-500 dark:bg-gray-600 dark:text-white dark:placeholder-gray-400"
                placeholder="Empresa"
                required=""
              />
            </div>
          </div>
          <div id="accordion-collapse" data-accordion="collapse">
            <h2 id="accordion-collapse-heading-1">
              <button
                type="button"
                class="flex w-full items-center justify-between gap-3 rounded-t-xl border border-b-0 border-orange-600 bg-orange-500 p-3 font-semibold text-white hover:bg-orange-600 focus:ring-4 focus:ring-gray-200 md:p-5 rtl:text-right dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-800 dark:focus:ring-gray-800"
                data-accordion-target="#accordion-collapse-body-1"
                aria-expanded="false"
                aria-controls="accordion-collapse-body-1"
              >
                <span class="flex-grow">Opciones Avanzadas</span>
                <svg
                  data-accordion-icon
                  class="h-3 w-3 shrink-0 rotate-180 md:h-4 md:w-4"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 10 6"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5 5 1 1 5"></path>
                </svg>
              </button>
            </h2>
            <div
              id="accordion-collapse-body-1"
              class="hidden"
              aria-labelledby="accordion-collapse-heading-1"
            >
              <div
                class="border border-b-0 border-gray-200 p-5 dark:border-gray-700 dark:bg-gray-900"
              >
                <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                  <div class="col-span-1">
                    <label
                      class="mb-2 flex items-center text-sm font-medium text-gray-900 dark:text-white"
                    >
                      <i class="bx bx-user mr-2"></i> Dirección:
                    </label>
                    <input
                      type="text"
                      name="direccion"
                      id="direccion"
                      class="focus:ring-primary-600 focus:border-primary-600 dark:focus:ring-primary-500 dark:focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 dark:border-gray-500 dark:bg-gray-600 dark:text-white dark:placeholder-gray-400"
                      placeholder="Dirección"
                      required=""
                    />
                  </div>
                  <div class="col-span-1">
                    <label
                      class="mb-2 flex items-center text-sm font-medium text-gray-900 dark:text-white"
                    >
                      <i class="bx bx-phone mr-2"></i> Teléfono:
                    </label>
                    <input
                      type="tel"
                      name="telefono"
                      id="telefono"
                      class="focus:ring-primary-600 focus:border-primary-600 dark:focus:ring-primary-500 dark:focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 dark:border-gray-500 dark:bg-gray-600 dark:text-white dark:placeholder-gray-400"
                      placeholder="Teléfono"
                      required=""
                    />
                  </div>
                  <div class="col-span-1">
                    <label
                      class="mb-2 flex items-center text-sm font-medium text-gray-900 dark:text-white"
                    >
                      <i class="bx bx-envelope mr-2"></i> Correo Electrónico:
                    </label>
                    <input
                      type="email"
                      name="correo"
                      id="correo"
                      class="focus:ring-primary-600 focus:border-primary-600 dark:focus:ring-primary-500 dark:focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 dark:border-gray-500 dark:bg-gray-600 dark:text-white dark:placeholder-gray-400"
                      placeholder="Correo Electrónico"
                      required=""
                    />
                  </div>
                  <div class="col-span-1">
                    <label
                      class="mb-2 flex items-center text-sm font-medium text-gray-900 dark:text-white"
                    >
                      <i class="bx bx-calendar mr-2"></i> Fecha de Nacimiento:
                    </label>
                    <input
                      type="date"
                      name="fechaNacimiento"
                      id="fechaNacimiento"
                      class="focus:ring-primary-600 focus:border-primary-600 dark:focus:ring-primary-500 dark:focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 dark:border-gray-500 dark:bg-gray-600 dark:text-white dark:placeholder-gray-400"
                      required=""
                    />
                  </div>
                </div>
              </div>
            </div>
            <div
              id="accordion-collapse-body-2"
              class="hidden"
              aria-labelledby="accordion-collapse-heading-2"
            >
            </div>
          </div>
          <br />
          <div class="text-center">
            <button
              type="submit"
              class="inline-flex items-center rounded-lg px-3 py-1.5 text-center text-sm font-medium text-white hover:bg-blue-800 focus:outline-none focus:ring-4"
              style={{ background: 'linear-gradient(135deg, #ff5c28, #da3805)' }}
            >
              <i class="bx bx-add-to-queue mr-2"></i>Añadir Cliente
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</astro-doc>
