---
import { Image } from 'astro:assets'
import map from '@images/caja/mapa.png'
import avatar from '@images/caja/usuario.jpg'
---

<form class="space-y-6 p-1 py-1">
  <div class="space-y-12 rounded-lg p-1 shadow">
    <div class="border-b border-gray-900/10 pb-1">
      <label for="last-name" class="mb-2 block text-xl font-medium text-white"
        >Registrar Sucursal</label
      >
      <h2 class="text-base font-semibold leading-7 text-white">Informacion sucursal</h2>
      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="col-span-full">
          <label for="first-name" class="block text-sm font-medium leading-6 text-white"
            >Nombre</label
          >
          <div class="mt-2">
            <input
              style="background-color: #181B3A;"
              type="text"
              name="first-name"
              id="first-name"
              autocomplete="first-name"
              placeholder="Nombre de la empresa"
              required=""
              class="block w-full rounded-md border-0 p-2.5 py-2 text-white shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset
                      focus:ring-orange-600 sm:text-sm sm:leading-6"
            />
          </div>
        </div>
        <div class="sm:col-span-3">
          <label for="branch" class="block text-sm font-medium leading-6 text-white">Sucursal</label
          >
          <div class="mt-2">
            <input
              style="background-color: #181B3A;"
              type="text"
              name="branch"
              id="branch"
              autocomplete="branch"
              placeholder="Nombre de la sucursal"
              required=""
              class="block w-full rounded-md border-0 p-2.5 py-2 text-white shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset
                      focus:ring-orange-600 sm:text-sm sm:leading-6"
            />
          </div>
        </div>
        <div class="sm:col-span-3">
          <label for="description" class="block text-sm font-medium leading-6 text-white"
            >Descripción</label
          >
          <div class="mt-2">
            <input
              style="background-color: #181B3A;"
              type="text"
              name="description"
              id="description"
              autocomplete="description"
              placeholder="Descripción"
              required=""
              class="block w-full rounded-md border-0 p-2.5 py-2 text-white shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset
                      focus:ring-orange-600 sm:text-sm sm:leading-6"
            />
          </div>
        </div>

        <div class="sm:col-span-2 sm:col-start-1">
          <label for="city" class="block text-sm font-medium leading-6 text-white">Teléfono</label>
          <div class="mt-2">
            <input
              style="background-color: #181B3A;"
              type="number"
              name="phone-number"
              id="phone-number"
              placeholder=" e.g. +591 000000"
              required=""
              autocomplete="address-level2"
              class="block w-full rounded-md border-0 p-2.5 py-2 text-white shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6"
            />
          </div>
        </div>

        <div class="sm:col-span-2">
          <label for="userdate" class="block text-sm font-medium leading-6 text-white"
            >Dirección</label
          >
          <div class="mt-2">
            <input
              style="background-color: #181B3A;"
              type="text"
              name="department"
              id="department"
              required=""
              placeholder="Calle 2"
              autocomplete="address-level1"
              class="block w-full rounded-md border-0 p-2.5 py-2 text-white shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6"
            />
          </div>
        </div>

        <div class="sm:col-span-2">
          <label for="gender" class="block text-sm font-medium leading-6 text-white">Estado</label>
          <div class="mt-2">
            <select
              style="background-color: #181B3A;"
              id="gender"
              name="gender"
              autocomplete="gender-name"
              required=""
              class="block w-full rounded-md border-0 p-2.5 py-2 text-white shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:max-w-xs sm:text-sm sm:leading-6"
            >
              <option value="Masculino">Active</option>
              <option value="Femenino">Inactive</option>
            </select>
          </div>
        </div>
        <div class="col-span-full">
          <label for="gps" class="block text-sm font-medium leading-6 text-white"
            >Localización</label
          >
          <div class="mt-2">
            <input
              style="background-color: #181B3A;"
              type="text"
              name="gps"
              id="gps"
              autocomplete="gps"
              placeholder="longitud,latitud"
              required=""
              onmousedown="return false;"
              onkeypress="return false;"
              class="block w-full rounded-md border-0 p-2.5 py-2 text-white shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset
                      focus:ring-orange-600 sm:text-sm sm:leading-6"
            />
          </div>
        </div>
        <div class="col-span-full">
          <label for="gps" class="block text-sm font-medium leading-6 text-white"></label>
          <div class="mt-2">
            <Image id="map" src={map} alt="iniciar avatar" class="h-200 w-600" />
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="border-b border-gray-900/10 pb-2">
    <h2 class="leading-2 text-base font-semibold text-white">Sucursal</h2>
    <p class="text-sm leading-6 text-white">
      Esta información se mostrará públicamente, así que tenga cuidado con lo que comparte.
    </p>
    <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-6">
      <div class="col-span-full">
        <label for="photo" class="block text-sm font-medium leading-6 text-white">Foto</label>
        <div class="mt-2 flex items-center gap-x-3">
          <Image src={avatar} alt="iniciar avatar" class="h-10 w-10 rounded-full" />
          <button
            type="button"
            class="rounded-md border border-transparent bg-blue-950 px-3 py-2 text-sm text-white transition-colors hover:bg-orange-600"
            >Change</button
          >
        </div>
      </div>
      <div class="col-span-full">
        <label for="cover-photo" class="block text-sm font-medium leading-6 text-white"
          >Subir Foto</label
        >
        <label
          for="dropzone-file"
          class="h-34 flex w-full cursor-pointer flex-col items-center justify-center rounded-lg border-2 border-dashed border-gray-300 dark:border-gray-600 dark:hover:border-gray-500"
        >
          <div class="flex flex-col items-center justify-center pb-6 pt-5">
            <svg
              class="mx-auto h-12 w-12 text-gray-300"
              viewBox="0 0 24 24"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M1.5 6a2.25 2.25 0 012.25-2.25h16.5A2.25 2.25 0 0122.5 6v12a2.25 2.25 0 01-2.25 2.25H3.75A2.25 2.25 0 011.5 18V6zM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0021 18v-1.94l-2.69-2.689a1.5 1.5 0 00-2.12 0l-.88.879.97.97a.75.75 0 11-1.06 1.06l-5.16-5.159a1.5 1.5 0 00-2.12 0L3 16.061zm10.125-7.81a1.125 1.125 0 112.25 0 1.125 1.125 0 01-2.25 0z"
                clip-rule="evenodd"></path>
            </svg>
            <p class="mb-2 text-sm text-gray-500 dark:text-gray-400">
              <span class="font-semibold">Subir archivos</span> or drag and drop
            </p>
            <p class="text-xs text-gray-500 dark:text-gray-400">PNG, JPG, GIF up to 10MB</p>
          </div>
          <input id="dropzone-file" type="file" class="hidden" />
        </label>
      </div>
    </div>
  </div>
  <div class="border-b border-white/10 pb-12">
    <div>
      <label for="terms" class="text-sm font-medium text-white dark:text-gray-300">
        Notificaciones <a href="#" class="text-orange-600 hover:underline dark:text-orange-500"
          >Siempre te informaremos sobre cambios importantes, pero tú eliges qué más quieres
          escuchar</a
        ></label
      >
    </div>
    <div class="mt-10 space-y-10">
      <fieldset class="borde">
        <div class="flex items-center space-x-2">
          <input
            id="terms"
            type="checkbox"
            value=""
            class="h-4 w-4 rounded border-gray-300 text-orange-600 checked:border-orange-600 checked:bg-orange-600 focus:ring-orange-500 dark:border-gray-600 dark:bg-orange-700 dark:focus:ring-orange-600"
          />
          <label for="terms" class="text-sm font-medium text-white dark:text-gray-300">
            Estoy de acuerdo con los <a
              href="#"
              class="text-orange-600 hover:underline dark:text-orange-500">términos y condiciones</a
            ></label
          >
        </div>
      </fieldset>
    </div>
  </div>
</form>
<div class="mt-6 flex items-center justify-end gap-x-6">
  <button
    type="button"
    class="rounded-lg px-5 py-2.5 text-sm font-medium text-white hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-gray-200"
    >Cancelar</button
  >
  <button
    type="submit"
    class="rounded-md bg-orange-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600"
  >
    Guardar</button
  >
</div>
