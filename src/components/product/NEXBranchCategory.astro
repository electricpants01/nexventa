---
import { Image } from 'astro:assets'
import food1 from '../../public/images/food/11.jpg' // La imagen de producto
import food2 from '../../public/images/food/9.jpg' // La imagen de producto
import food3 from '../../public/images/food/10.jpg' // La imagen de producto
import food4 from '../../public/images/food/2.jpg' // La imagen de producto

import { z } from 'zod'
import { ProductResult } from '../../utils/schemas'
import ProductCard from './Products.astro'

const ProductsResult = z.array(ProductResult)
export interface Props {
  products: z.infer<typeof ProductsResult>
}
const { products } = Astro.props as Props
---

<astro-doc>
  <section>
    <div class="container py-16 sm:py-20">
      <h2 class="sr-only">Products</h2>

      <div class="grid gap-12 md:grid-cols-2 lg:grid-cols-3">
        {products.map((product) => <ProductCard product={product} />)}
      </div>
    </div>
  </section>

  <div class="category">
    <div class="container">
      <div class="category-item-container has-scrollbar">
        <div class="category-item">
          <div class="category-img-box">
            <Image src={food1} alt="HAMBURGUESAS" width="30" />
          </div>

          <div class="category-content-box">
            <div class="category-content-flex">
              <h3 class="category-item-title">HAMBURGUESAS</h3>

              <p class="category-item-amount">(53)</p>
            </div>

            <a href="#" class="category-btn">Ver mas</a>
          </div>
        </div>

        <div class="category-item">
          <div class="category-img-box">
            <Image src={food2} alt="HAMBURGUESAS" width="30" />
          </div>

          <div class="category-content-box">
