---
import NEXPagination from './NexPagination.astro'
import NEXBillingTable from './NexBillingTable.astro'
---

<div class="px-1 py-1">
  <div class="mx-auto max-w-5xl rounded-lg sm:px-6 sm:py-10 lg:px-8">
    <div class="space-y-6 p-1 py-1 shadow">
      <div class="border-b border-gray-900/10 pb-1">
        <div class="border-b border-gray-50 px-6 text-black">
          <div class="mb-4 flex items-center justify-between">
            <!-- Search bar -->
            <div class="relative flex w-full max-w-md items-center">
              <input
                type="text"
                placeholder="Buscar..."
                class="w-full rounded-md border px-4 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-orange-600"
              />
              <i class="bx bx-search absolute right-3 text-gray-500"></i>
            </div>
            <!-- Filter button -->
            <button
              id="dropdownActionButton"
              data-dropdown-toggle="dropdownAction"
              class="inline-flex items-center rounded bg-orange-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-orange-600 dark:bg-orange-600 dark:text-white dark:hover:bg-black"
              type="button"
            >
              <i class="bx bx-filter-alt"></i> Opci√≥n
            </button>
            <!-- Dropdown menu -->
            <div
              id="dropdownAction"
              class="z-10 hidden w-44 divide-y rounded-lg bg-white shadow dark:bg-white"
            >
              <ul
                class="py-1 text-sm text-black dark:text-black"
                aria-labelledby="dropdownActionButton"
              >
                <li>
                  <a
                    href="#"
                    class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-orange-600 dark:hover:text-white"
                    ><i class="bx bx-export mr-2"></i> Exportar</a
                  >
                </li>
                <li>
                  <a
                    href="#"
                    class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-orange-600 dark:hover:text-white"
                    ><i class="bx bx-import mr-2"></i> Importar</a
                  >
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="overflow-x-auto">
          <NEXBillingTable />
          <div class="flex h-full items-center justify-center">
            <NEXPagination />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
